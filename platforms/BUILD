# -------------- Define Execution Platforms -------------- #
# Linux x86 x64 Platform
platform(
    name = "linux_x86_64_exec",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:x86_64",
    ],
    visibility = ["//visibility:public"],
)

# Linux x86 x64 Platform
platform(
    name = "windows_x86_64_exec",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:x86_64",
    ],
    visibility = ["//visibility:public"],
)
